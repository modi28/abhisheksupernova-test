  <div id="demo" class="carousel slide" data-ride="carousel">




  <!-- The slideshow -->
  <div class="container carousel-inner no-padding">
    
   
     {% for product in collections[section.settings.feature_Collection].products %} 
    {% assign i = forloop.index%}
    
     <div class="carousel-item  {% if forloop.first == true %} active {%endif%}">
       {% for i in (1..4) %}
          <div class="col-xs-3 col-sm-3 col-md-3">
              <div class="card">
      <div class="card-body">
        <a href="{{product.url}}" ><img src="{{product.images[0] | img_url:"large"}}" > </a>
        <div class="product_contant">
          <div class"">
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star"></span>
            <span class="fa fa-star"></span>
          </div>
          <h4 class="product-title"><a href="{{product.url}}">{{product.title}}</a></h4>
          <h4 class="product_price"><span><del>{{product.compare_at_price| money_without_trailing_zeros}}</del></span>&nbsp;&nbsp; {{product.price | money_without_trailing_zeros }}</h4>
          <a href="#" class="add__btn">add to kart</a>
        </div>
        
        {%for tag in product.tags %}
        {% if tag == 'New product' %}
        		<div class="new">
          <div class="data">
            <p>new!</p>
          </div>
          
        </div>
        {%endif%}
        {% endfor%}
        
             
      </div> 
    </div>
       </div>
        
    {%endfor%}
       </div> 
    {% endfor %}
    
    </div>
    <!-- -->
 
  

  <!-- Left and right controls -->
  <a class="carousel-control-prev" href="#demo" data-slide="prev">
    <span class="carousel-control-prev-icon"></span>
  </a>
  <a class="carousel-control-next" href="#demo" data-slide="next">
    <span class="carousel-control-next-icon"></span>
  </a>
</div>


