<!-- Default Bootstrap carousel -->
<div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner row w-100 mx-auto" role="listbox">
              
               {% for product in collections[section.settings.feature_Collection].products %} 
              
              		<div class="carousel-item col-12 col-sm-6 col-md-4 col-lg-3 {% if forloop.first == true %} active {%endif%}">
                    <div class="card">
                      <div class="card-body">
                        <a href="{{product.url}}" ><img src="{{product.images[0] | img_url:"large"}}" > </a>
                        <div class="product_contant">
                          <div class"">
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star"></span>
                            <span class="fa fa-star"></span>
                          </div>
                          <h4 class="product-title"><a href="{{product.url}}">{{product.title}}</a></h4>
                          <h4 class="product_price"><span><del>{{product.compare_at_price| money_without_trailing_zeros}}</del></span>&nbsp;&nbsp; {{product.price | money_without_trailing_zeros }}</h4>
                          <a href="#" class="add__btn">add to kart</a>
                        </div>

                        {%for tag in product.tags %}
                        {% if tag == 'New product' %}
                                <div class="new">
                          <div class="data">
                            <p>new!</p>
                          </div>

                        </div>
                        {%endif%}
                        {% endfor%}
                      </div> 
                    </div>                  
                </div>  
              
              {% endfor %}
              
                           
              
            </div>
  <a class="carousel-control-prev" href="#carouselExample" role="button" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExample" role="button" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </a>
</div>

{% schema %}
{
  "name": " collection-slders ",
  "settings": [
 {
      "type": "text",
      "id": "heading",
      "label": "Heading"
      
    },
    {
      "type": "collection",
      "id": "feature_Collection",
      "label": "choose collection show on slider"
      
    }
  ],
  "presets": [
    {
      "name": "collection-slders",
      "category": "collection"
    }
  ]
}
{% endschema %}